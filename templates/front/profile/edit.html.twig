{% extends 'front/base.html.twig' %}

{% block title %}Edit my profile - RankedChoice{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details mt-4">
                        <h1 class="h4 mb-3 text-center font-weight-normal title-gradient-1">Edit your profile</h1>
                        {{ form_start(profileEditForm) }}

                        <div class="form-group">
                            {{ form_label(profileEditForm.fullName) }}
                            {{ form_widget(profileEditForm.fullName, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(profileEditForm.phone) }}
                            {{ form_widget(profileEditForm.phone, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(profileEditForm.address) }}
                            {{ form_widget(profileEditForm.address, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(profileEditForm.zipCode) }}
                            {{ form_widget(profileEditForm.zipCode, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-success">
                                <span>SAVE CHANGES</span>
                            </button>
                        </div>

                        {{ form_end(profileEditForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
