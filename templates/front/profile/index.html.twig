{% extends 'front/base.html.twig' %}

{% block title %}{{ 'personal_account.head'|trans }}{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 mb-3 font-weight-normal title-gradient-1" id="page_header_title">
                            {{ 'personal_account.head'|trans }}!
                        </h1>
                        {% if false == app.user.verified %}
                            {% if sendEmail %}
                                <div class="alert alert-success">
                                    {{ 'personal_account.verify_email_link_send'|trans }}
                                </div>
                            {% else %}
                                <a href="{{ path('main_profile_resending_verify_email_link') }}" class="btn btn-link btn-dark mb-2">
                                    <span>{{ 'personal_account.resending_verify_email_link'|trans }}</span>
                                </a>
                            {% endif %}
                        {% endif %}
                        <table class="table text-left">
                            <tbody>
                            <tr>
                                <td>{{ 'personal_account.head'|trans }}:</td>
                                <td>{{ app.user.email }}</td>
                            </tr>
                            <tr>
                                <td>{{ 'personal_account.labels.full_name'|trans }}:</td>
                                <td>{% if app.user.fullName %}{{ app.user.fullName }}{% else %}-{% endif %}</td>
                            </tr>
                            <tr>
                                <td>{{ 'personal_account.labels.phone'|trans }}:</td>
                                <td>{% if app.user.phone %}{{ app.user.phone }}{% else %}-{% endif %}</td>
                            </tr>
                            <tr>
                                <td>{{ 'personal_account.labels.address'|trans }}:</td>
                                <td>{% if app.user.address %}{{ app.user.address }}{% else %}-{% endif %}</td>
                            </tr>
                            <tr>
                                <td>{{ 'personal_account.labels.zipcode'|trans }}:</td>
                                <td>{% if app.user.zipcode %}{{ app.user.zipcode }}{% else %}-{% endif %}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="alert alert-info">
                            {{ 'personal_account.message'|trans }}
                        </div>
                        <hr/>
                        <div class="form-footer-buttons">
                            <table class="table table-borderless table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">{{ 'personal_account.social_group.integration_service'|trans }}</th>
                                    <th scope="col">{{ 'personal_account.social_group.action'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512" width="35" height="35">
                                            <title>{{ 'personal_account.social_group.google'|trans }}</title>
                                            <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"/>
                                        </svg>
                                    </td>
                                    <td>
                                        {% include 'front/_embed/_utils/_social_network_link_unlink_btn.html.twig' with {'socialName': app.user.googleId} %}
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" width="35" height="35">
                                            <title>{{ 'personal_account.social_group.yandex'|trans }}</title>
